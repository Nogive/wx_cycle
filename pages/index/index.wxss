/**index.wxss**/
.container{
  padding-top: 270rpx;
}
/* 添加至我的小程序的提醒 */
/* components/mark/mark.wxss */
.box {
  position:fixed;
  top:-16rpx;
  right:6px;
  z-index:999;
  display:flex;
  justify-content:flex-end;
  align-items:flex-end;
  flex-direction:column;
  width:600rpx;
}
.arrow {
 width:0;
  height:-12rpx;
  margin-right:120rpx;
  border-width:15rpx;
  border-style:solid;
  border-color:transparent transparent #000 transparent;
  opacity:.4;
}
.body {
  background-color:#000;
  box-shadow:0 10rpx 20rpx -10rpx #000;
  border-radius:72rpx;
  display:flex;
  align-items:center;
  justify-content:center;
  height:50rpx;
  padding:0 20rpx;
  margin-right:40rpx;
  opacity:.4;

}
.body > .text {
  color: #FFF;
  font-size:20rpx;
  font-weight:400;
  display:block;
  height:100%;
  line-height:50rpx;

}

.iconfont {
  display:inline-block;
  vertical-align:middle;
}

/* 搜索 */
.search-wrapper {
  width: 100%;
  height: 124rpx;
  display: flex;
  align-items: center;
  flex: 1;
  box-sizing: border-box;
  padding: 30rpx;
  position: fixed;
  top: 0;
  left: 0;
  background: #ffffff;
  z-index: 2;
}
.search-box {
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  width: 100%;
  height: 60rpx;
  background: #f5f5f5;
  border-radius: 90rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.search-box .iconfont {
  color: #666;
  margin-right: 14rpx;
}

.search-box input {
  width: 100%;
  height: 60rpx;
}

/* tab */
.tab-wrapper{
  width: 100%;
  height: 140rpx;
  font-size: 32rpx;
  display: flex;
  position: fixed;
  top: 124rpx;
  left: 0;
  z-index: 2;
  background: #ffffff;
  box-shadow: 0 12rpx 24rpx 0 rgba(86,86,86,.15);
}
.tab-wrapper .tab{
  flex: 1;
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.tab .iconfont{
  font-size: 48rpx;
  margin-right: 10rpx;
}
.tab-dry .iconfont{
  color: #1e1e1e;
}
.tab-wet .iconfont{
  color: #653f32;
}
.tab-cycle .iconfont{
  color: #3a89c1;
  
}
.tab-harmful .iconfont{
  color: #e92614;
}
.tab-wrapper .tab::after{
  content:'';
  height: 100rpx;
  border: 2rpx dotted #e9e9e9;
  position: absolute;
  right: 0;
  top: 20rpx;
}
.tab-wrapper .tab-harmful::after{
  border: none;
}
.tab-wrapper .current{
  color: #24a234;
  font-weight: bold;
}
.tab-wrapper .current .iconfont{
  color: #24a234;
}

/* content */
.heightHandred{
  position: relative;
  height: 1334rpx;
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.heightAuto{
  position: relative;
  height: auto;
}
.content-wrapper{
  padding: 30rpx 0;
  font-size: 24rpx;
  line-height: 1.8;
  box-sizing: border-box;
}
.short-intro{
  width:85%;
  margin: 0 auto;
  position: relative;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 12rpx 24rpx 0 rgba(86,86,86,.15);
}
.short-intro .img-block{
  text-align: center;
}
.img-block .img{
  width: 400rpx;
}
.intro-text{
  text-indent: 56rpx;
}
.intro-text .title{
  font-weight: bold;
}
.re-title{
  font-size: 28rpx;
  font-weight: bold;
}
.list-text .dot-text{
  text-indent: 1em;
  position: relative;
}
.list-text .dot-text::after{
  content:'';
  width: 8rpx;
  height: 8rpx;
  background: #000;
  border-radius: 50%;
  position: absolute;
  left: 6rpx;
  top: 20rpx;
}
.list-wrapper{
  margin-top: 20rpx;
}
.list-wrapper .one-list{
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 30rpx;
}
.one-list:nth-child(even){
  background: #f5f5f5;
}

/* btns */
.btn-wrapper{
  position: fixed;
  right: 20rpx;
  bottom: 60rpx;
  z-index: 999;
}
.btn-wrapper .btn{
  background: #ffffff;
  width: 180rpx;
  height: 60rpx;
  border:2rpx solid #e9e9e9;
  border-radius: 60rpx;
  box-shadow:0 0 24rpx 0 rgba(86,86,86,.15);
  font-size: 24rpx;
  margin-bottom: 18rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.btn-wrapper .btn::after{
  border: none;
}
.btn-wrapper .btn .iconfont{
  margin-right: 10rpx;
}
.btn-wrapper .btn-share .iconfont{
  color: #fddf30;
}
.btn-wrapper .btn-message .iconfont{
  color: #3385ff;
}

/* modal */
.modal-wrapper{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 888;
  background: rgba(0,0,0,.5);
  display: flex;
  justify-content: center;
  align-items: center;
}
.modal-wrapper .modal-content{
  width: 460rpx;
  height: 400rpx;
  border-radius: 20rpx;
  padding: 40rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  box-sizing: border-box;
  font-size: 32rpx;
  color: #ffffff;
}
.wet-content{
  background: #653f32;
}
.dry-content{
  background: #1e1e1e;
}
.cycle-content{
  background: #3a89c1;
}
.harmful-content{
  background: #e92614;
}
.modal-content .title{
  font-size: 40rpx;
  font-weight: bold;
}
.modal-content .alia{
  font-size: 30rpx;
}
.modal-content .iconfont{
  font-size: 120rpx;
}
.modal-content .name{
  font-size: 28rpx;
}
.modal-content .eng{
  font-size: 16rpx;
}

.qr-modal-wrqpper{
  z-index: 1000;
}
.modal-wrapper .qr-modal{
  width:560rpx;
  height: 680rpx;
  background: #ffffff;
  padding: 40rpx;
  position: relative;
}
.qr-modal .img{
  width: 90%;
}
.qr-modal .modal-btn::after{
  border: none;
}
.qr-modal .modal-btn{
  font-size: 28rpx;
  background: #07c160;
  color: #ffffff;
}
.modal-content .modal-icon{
  color: #999999;
  font-size: 48rpx;
  position: absolute;
  top: 20rpx;
  right: 20rpx;
}
