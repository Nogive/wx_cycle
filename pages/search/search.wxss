/* pages/search/search.wxss */
.container{
  padding-top: 122rpx;
}
/* 搜索 */
.search-wrapper {
  width: 100%;
  height: 124rpx;
  display: flex;
  align-items: center;
  flex: 1;
  box-sizing: border-box;
  padding: 30rpx;
  position: fixed;
  top: 0;
  left: 0;
  background: #ffffff;
  z-index: 2;
  box-shadow: 0 12rpx 24rpx 0 rgba(86,86,86,.15);
}
.search-box {
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  width: 100%;
  height: 60rpx;
  background: #f5f5f5;
  border-radius: 90rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.search-box .iconfont {
  color: #666;
  margin-right: 14rpx;
}
.search-box .clear{
  margin-right: 0;
  color: #c8c8c8;
}

.search-box input {
  width: 100%;
  height: 60rpx;
}
.list-wrapper .one-list{
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 30rpx;
  font-size: 24rpx;
}
.one-list:nth-child(even){
  background: #f5f5f5;
}

.no-list{
  width: 100%;
  margin-top: 60rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
}
.no-list .iconfont{
  font-size: 100rpx;
}
/* btns */
.btn-wrapper{
  position: fixed;
  right: 20rpx;
  bottom: 60rpx;
  z-index: 999;
}
.btn-wrapper .btn{
  background: #ffffff;
  width: 180rpx;
  height: 60rpx;
  border:2rpx solid #e9e9e9;
  border-radius: 60rpx;
  box-shadow:0 0 24rpx 0 rgba(86,86,86,.15);
  font-size: 24rpx;
  margin-bottom: 18rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.btn-wrapper .btn::after{
  border: none;
}
.btn-wrapper .btn .iconfont{
  margin-right: 10rpx;
}
.btn-wrapper .btn-share .iconfont{
  color: #fddf30;
}
.btn-wrapper .btn-message .iconfont{
  color: #3385ff;
}

/* modal */
.modal-wrapper{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 888;
  background: rgba(0,0,0,.5);
  display: flex;
  justify-content: center;
  align-items: center;
}
.modal-wrapper .modal-content{
  width: 460rpx;
  height: 400rpx;
  border-radius: 20rpx;
  padding: 40rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  box-sizing: border-box;
  font-size: 32rpx;
  color: #ffffff;
}
.wet-content{
  background: #653f32;
}
.dry-content{
  background: #1e1e1e;
}
.cycle-content{
  background: #3a89c1;
}
.harmful-content{
  background: #e92614;
}
.modal-content .title{
  font-size: 40rpx;
  font-weight: bold;
}
.modal-content .alia{
  font-size: 30rpx;
}
.modal-content .iconfont{
  font-size: 120rpx;
}
.modal-content .name{
  font-size: 28rpx;
}
.modal-content .eng{
  font-size: 16rpx;
}